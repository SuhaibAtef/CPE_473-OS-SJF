{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-pipe",
                    "-fsanitize=signed-integer-overflow,undefined",
                    "-g",
                    "-march=native",
                    // "-O2", This optimization causes errors while Debugging
                    "-std=c++17",
                    "-Wall",
                    "-Wshadow",
                    "-Wno-unused-result",
                    "${file}",
                    "-o",
                    "${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++"
		}
	]
}